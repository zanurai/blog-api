{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
     "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],  
      "@routes/*": ["src/routes/*"],
      "@middleware/*": ["src/middleware/*"]
    },
  
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
